    <display-name>TripCase Email Parsing Application</display-name>
 
	<listener>
		<listener-class>
			org.springframework.web.context.ContextLoaderListener
		</listener-class>
	</listener>
 
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>/WEB-INF/applicationContext.xml</param-value>
	</context-param>
 
	<servlet>
		<servlet-name>tripcase-servlet</servlet-name>
		<servlet-class>
			org.glassfish.jersey.servlet.ServletContainer
		</servlet-class>
		
		<init-param>
			<!-- <param-name>javax.ws.rs.Application</param-name>
			<param-value>com.motivity.labs.rest.RestApplication</param-value>	 -->
			 
			<param-name>jersey.config.server.provider.packages</param-name>
			<param-value>com.motivity.labs.rest</param-value>
	
		</init-param>	
		<load-on-startup>1</load-on-startup>
		<async-supported>true</async-supported>
	</servlet>
 
	<servlet-mapping>
	
		<servlet-name>tripcase-servlet</servlet-name>
		<url-pattern>/parsing/*</url-pattern>
	</servlet-mapping>
  
</web-app>
