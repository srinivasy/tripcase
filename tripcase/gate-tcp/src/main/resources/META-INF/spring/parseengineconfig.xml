						 http://www.springframework.org/schema/context  http://www.springframework.org/schema/context/spring-context-3.0.xsd" >
      						
	<context:annotation-config />

	<!-- init gate -->
	<gate:init gate-home="classpath:gate-files" plugins-home="classpath:gate-files/plugins" 
	site-config-file="classpath:gate-files/gate.xml" user-config-file="classpath:gate-files/user-gate.xml">
		<gate:preload-plugins>
			<value>gate-files/plugins/ANNIE</value>
			<value>gate-files/plugins/OpenNLP</value>
		</gate:preload-plugins>
	</gate:init> 
	
