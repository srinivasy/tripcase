						http://www.springframework.org/schema/context/spring-context-3.0.xsd">
      						
	<context:annotation-config />

	<!-- init gate -->
 	  <gate:init gate-home="${gate.home}" plugins-home="${plugin.home}" site-config-file="${site.config.file}" user-config-file="${user.config.file}">
		<gate:preload-plugins>
			<value>${plugin.annie}</value>
			<value>${plugin.opennlp}</value>
		</gate:preload-plugins>
	</gate:init>  
	
